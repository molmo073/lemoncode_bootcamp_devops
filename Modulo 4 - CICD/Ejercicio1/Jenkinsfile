pipeline {
    agent any

    environment {
        GRADLEW_DIR = '../jenkins-resources'
        GRADLE_CMD = './gradlew'
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/molmo073/lemoncode_bootcamp_devops.git', branch: 'main'
            }
        }

        stage('Compile') {
            steps {
                dir("${env.GRADLEW_DIR}") {
                    sh "${env.GRADLE_CMD} compileJava"
                }
            }
        }

        stage('Unit Tests') {
            steps {
                dir("${env.GRADLEW_DIR}") {
                    sh "${env.GRADLE_CMD} test"
                }
            }
        }
    }

    post {
        always {
            dir("${env.GRADLEW_DIR}") {
                junit 'build/test-results/test/*.xml'
            }
        }
    }
}
